<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.sigrid.englishlearning" >

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <meta-data android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />
        <activity android:name="in.sigrid.englishlearning.activity.HomeActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="in.sigrid.englishlearning.activity.MainActivity" />
        <activity
            android:name="in.sigrid.englishlearning.activity.QuestionActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name="in.sigrid.englishlearning.activity.GameMakeSentenceActivity" />
        <activity
            android:name="in.sigrid.englishlearning.activity.VocabActivity"
            android:label="@string/title_activity_vocab" >
        </activity>
        <activity android:name="in.sigrid.englishlearning.activity.ProfileActivity" />

    </application>

</manifest>
